<?xml version="1.0"?>

<!-- ROS navigation stack with velocity smoother and safety (reactive) controller -->
<launch>

<!--
  <include file="$(find diff_wheeled_robot_gazebo)/launch/includes/velocity_smoother.launch.xml"/>
  <include file="$(find diff_wheeled_robot_gazebo)/launch/includes/safety_controller.launch.xml"/>
-->

	<!-- Defining parameters for move_base node -->

  <arg name="odom_topic" default="rugby/odom_ekf" />
  
  <!-- Starting move_base node -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">
  	<param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
  	<!-- common parameters of global costmap -->
    <rosparam file="$(find rugby)/config/global_costmap_common_params.yaml" command="load" ns="global_costmap" />
    <!-- common parameters of local costmap -->
    <rosparam file="$(find rugby)/config/local_costmap_common_params.yaml" command="load" ns="local_costmap" />
    <!-- local cost map parameters -->
    <rosparam file="$(find rugby)/config/local_costmap_params_ekf.yaml" command="load" />
    <!-- global cost map parameters -->
    <rosparam file="$(find rugby)/config/global_costmap_params.yaml" command="load" />
    <!-- base local planner parameters -->
    <!-- rosparam file="$(find rugby)/param/base_local_planner_params.yaml" command="load" /-->
    <!-- dwa local planner parameters -->
    <rosparam file="$(find rugby)/config/dwa_base_local_planner_params.yaml" command="load" />

    <!--remap from="cmd_vel" to="navigation_velocity_smoother/raw_cmd_vel"/-->
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="cmd_vel" to="/rugby/cmd_vel" />

  </node>
</launch>